#from kivy.utils import get_color_from_hex
<Kalkulator>:
    name: "Kalkulator" 
    
    MDBoxLayout:
        id:box
        md_bg_color: "#3A3E59"
        spacing: 15 
        padding: 15

        orientation: "vertical"

        MDLabel:
            theme_text_color: "Custom"
            
            id: lb1
            text: "Kalkulator walut"

        MDLabel:

            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1
            id: lb2
            text: root.balance

        MDLabel:

            id: lb3
            text: "Euro"

        TextInput:

            id: tp
            multiline: False
            hint_text: "Wartość"
            size_hint: .7, .30

        Button:

            id: btn1
            text: "Przelicz"
            size_hint: .7, .30
            pos: root.width /2-self.width/2, root.top/2-150
        
            on_release:
                root.acc.setBalance(int(tp.text))
                root.update_balance()
        MDTopAppBar:
            orientation: "horizontal"
            type: "top"
            md_bg_color: "#C36B84"
            title: "Express Currency "
            MDFloatingActionButton:
                md_bg_color:"F9AC66"
                icon: "account-cash"
                pos_hint: {"center_x": .9, "center_y": .9}
                spacing: "100dp"
                text: 'Back to menu'
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'Ustawienia'



<Custom>:
    
    name: "Custom"
    MDBoxLayout:
        
        md_bg_color: "#3A3E59"
        spacing: 15 
        padding: 15

        orientation: "vertical"

        MDLabel:
            size_hint: .3, .10
            theme_text_color: "Custom"
            
